# Django
DEBUG=True
SECRET_KEY=your-secret-key-here

# Database
DB_NAME=db.sqlite3
DB_USER=your-db-user
DB_PASSWORD=your-db-password
DB_HOST=localhost
DB_PORT=5432

# Email
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-email-password
DEFAULT_FROM_EMAIL=your-email@gmail.com

# Razorpay Configuration
# Get these from your Razorpay dashboard: https://dashboard.razorpay.com/
RAZORPAY_KEY_ID=your_razorpay_key_id  # Test/Live Key ID
RAZORPAY_KEY_SECRET=your_razorpay_key_secret  # Test/Live Key Secret

# Webhook secret (optional but recommended for production)
# Generate this from Razorpay dashboard: https://dashboard.razorpay.com/app/webhooks
RAZORPAY_WEBHOOK_SECRET=your_webhook_secret_here

# Webhook URL (update with your actual domain in production)
# Format: https://yourdomain.com/payment/webhook/
WEBHOOK_BASE_URL=http://localhost:8000

# Contact Information
CONTACT_EMAIL=your-email@example.com
CONTACT_PHONE=+1234567890
